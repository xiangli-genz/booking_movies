extends ../layouts/default.pug

block main
  // Section 11
  .section-11(page-cart)
    .container
      .inner-wrap
        .inner-head
          .inner-title Giỏ Hàng
          a.inner-back(href="/")
            | Quay lại mua hàng
            i.fa-solid.fa-angle-right
        .inner-tour-list(cart-list)
        .inner-list-price
          .inner-item
            .inner-label Tạm tính:
            .inner-price
              span(cart-sub-total) 0
              span đ
          .inner-item
            .inner-label Giảm:
            .inner-price -0đ
          .inner-item
            .inner-label Thanh toán:
            .inner-price-highlight
              span(cart-total) 0
              span đ
  // End Section 11
  // Section 12
  .section-12
    .container
      .inner-wrap
        form#order-form(action="")
          .inner-info
            .inner-title-main Thông Tin Khách Hàng
            .inner-inputs
              .inner-input
                input#full-name-input(
                  placeholder="Họ và tên" 
                  name="fullName" 
                  type="text"
                  value=(user ? user.fullName : "")
                  )
              .inner-input
                input#phone-input(
                  placeholder="Số điện thoại" 
                  name="phone" 
                  type="text"
                  value=(user ? user.phone : "")
                  )
            textarea(
              placeholder="Ghi chú" 
              name="note"
              )
          .inner-method
            .inner-title-main Chọn phương thức thanh toán
            .inner-list
              .inner-item
                input#methodMoney(
                  checked="" 
                  value="money" 
                  name="method" 
                  type="radio"
                  )
                label(for="methodMoney") Thanh toán tiền mặt khi đi tour
              .inner-item
                input#methodZaloPay(
                  value="zalopay" 
                  name="method" 
                  type="radio"
                  )
                label(for="methodZaloPay") ZaloPay
              .inner-item
                input#methodBank(
                  value="bank" 
                  name="method" 
                  type="radio"
                  )
                label(for="methodBank") Chuyển khoản ngân hàng
            .inner-info-bank
              .inner-title Thông tin chuyển khoản
              .inner-text Ngân hàng : CAKE BY VP BANK
              .inner-text Tên tài khoản: TRINH TRUNG SON
              .inner-text STK: 0867347102
          .inner-button
            button(type="submit") ĐẶT VÉ
  // End Section 12

  style.
    .inner-tour-item .inner-booking-details {
      margin-top: 10px;
      padding: 10px;
      background: #f9f9f9;
      border-radius: 5px;
    }
    
    .inner-booking-details .detail-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 5px;
      font-size: 13px;
    }
    
    .inner-booking-details .detail-label {
      font-weight: 600;
      color: #666;
    }
    
    .inner-booking-details .detail-value {
      color: #333;
    }
    
    .inner-seat-list, .inner-combo-list {
      font-size: 12px;
      color: #555;
      line-height: 1.6;
    }
    
    .inner-price-breakdown {
      margin-top: 8px;
      padding-top: 8px;
      border-top: 1px solid #ddd;
    }