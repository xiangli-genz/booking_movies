      h2.box-title(
        data-aos-duration="800" 
        data-aos="fade-up"
        ) Tin Tức Mới
      .inner-wrap(
        data-aos-delay="150" 
        data-aos-duration="800" 
        data-aos="fade-up"
        )
        .blog-item
          a(href="#")
            .inner-image
              img(
                alt="" 
                src="/assets/images/blog-1.jpg"
                )
            .inner-content
              .inner-date 23/05/2024
              h3.inner-title Homestay “cổ tích” giữa Đà Lạt mộng mơ
        .blog-item-2
          a(href="#")
            .inner-image
